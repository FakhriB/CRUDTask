@model CategoryCreateVM

<div class="container-fluid pt-4 px-4 mt-5">

    <div class="bg-secondary rounded p-4 mx-auto"
         style="max-width:600px; transform: translateX(200px);">

        <form method="post" asp-action="Create">

            <div class="mb-4">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger" style="color:white;"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">Create</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>

        </form>
    </div>

</div>
