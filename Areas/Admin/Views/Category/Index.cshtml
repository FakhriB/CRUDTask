@model IEnumerable<CategoryVM>

<div id="content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">

                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>Category List</h5>
                        <a asp-action="Create" class="btn btn-success btn-small pull-right">
                            <i class="icon-plus"></i> Create New
                        </a>
                    </div>

                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Date</th>
                                    <th style="width:220px" class="text-center">Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td class="text-center">
                                            @item.CreatedDate.ToString("MM/dd/yyyy")
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Detail"
                                               asp-route-id="@item.Id"
                                               class="btn btn-info btn-mini" title="Detail">
                                                <i class="icon-eye-open"></i>
                                            </a>

                                            <a asp-action="Update"
                                               asp-route-id="@item.Id"
                                               class="btn btn-warning btn-mini" title="Edit">
                                                <i class="icon-edit"></i>
                                            </a>

                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-danger btn-mini" title="Delete">
                                                <i class="icon-trash"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
